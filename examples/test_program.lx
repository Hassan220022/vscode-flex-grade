// Function definition
fun factorial(rakm n) {
    cond (n <= 1) {
        rg3 1
    } else {
        rg3 n * factorial(n - 1)
    }
}

// Main program
etb3("Welcome to Flex!")
etb3("The factorial of " + number + " is " + factorial(number))

// Loop example
