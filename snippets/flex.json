{
    "Function Definition": {
        "prefix": ["fun", "function", "sndo2"],
        "body": [
            "fun ${1:functionName}(${2:parameters}) {",
            "    ${0:// function body}",
            "}"
        ],
        "description": "Function definition in Flex"
    },
    "If Statement": {
        "prefix": ["if", "cond"],
        "body": [
            "if (${1:condition}) {",
            "    ${0:// code block}",
            "}"
        ],
        "description": "If statement in Flex"
    },
    "If-Else Statement": {
        "prefix": ["ifelse"],
        "body": [
            "if (${1:condition}) {",
            "    ${2:// code block}",
            "} else {",
            "    ${0:// else block}",
            "}"
        ],
        "description": "If-Else statement in Flex"
    },
    "For Loop": {
        "prefix": ["for", "loop", "karr"],
        "body": [
            "for (${1:i}=${2:0}; ${1:i}<${3:10}; ${1:i}++) {",
            "    ${0:// code block}",
            "}"
        ],
        "description": "For loop in Flex"
    },
    "While Loop": {
        "prefix": ["while", "karr"],
        "body": [
            "while (${1:condition}) {",
            "    ${0:// code block}",
            "}"
        ],
        "description": "While loop in Flex"
    },
    "Integer Variable": {
        "prefix": ["int", "rakm"],
        "body": [
            "rakm ${1:variableName} = ${0:0}"
        ],
        "description": "Integer variable declaration in Flex"
    },
    "Float Variable": {
        "prefix": ["float", "kasr"],
        "body": [
            "kasr ${1:variableName} = ${0:0.0}"
        ],
        "description": "Float variable declaration in Flex"
    },
    "String Variable": {
        "prefix": ["string", "nass"],
        "body": [
            "nass ${1:variableName} = \"${0:value}\""
        ],
        "description": "String variable declaration in Flex"
    },
    "Boolean Variable": {
        "prefix": ["bool", "so2al"],
        "body": [
            "so2al ${1:variableName} = ${0:true}"
        ],
        "description": "Boolean variable declaration in Flex"
    },
    "List Variable": {
        "prefix": ["list", "dorg"],
        "body": [
            "dorg ${1:variableName} = [${0:items}]"
        ],
        "description": "List variable declaration in Flex"
    },
    "Print Statement": {
        "prefix": ["print", "etb3"],
        "body": [
            "etb3(${0:\"message\"})"
        ],
        "description": "Print statement in Flex"
    },
    "Input Statement": {
        "prefix": ["input", "da5l"],
        "body": [
            "${1:variableName} = da5l()"
        ],
        "description": "Input statement in Flex"
    },
    "Import Statement": {
        "prefix": ["import", "geeb"],
        "body": [
            "geeb \"${0:filename.lx}\""
        ],
        "description": "Import statement in Flex"
    },
    "Return Statement": {
        "prefix": ["return", "rg3"],
        "body": [
            "rg3 ${0:value}"
        ],
        "description": "Return statement in Flex"
    }
}
